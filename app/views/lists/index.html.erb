<div class="navbar-lewagon">
  <div class="links d-flex">
    <%= link_to "My lists", lists_path %>
    <%= link_to "New list", new_list_path %>
  </div>
</div>
<div class="banner">
  <div class="header-container">
    <h2> Save any kind of movies</h2>
    <p> Classic </p>
  </div>
</div>
<div class="container">
  <h4> My lists </h4>
  <div class="row row-cols-3 mx-n5">
    <% @lists.each do |list| %>
    <div class="col px-5 my-3">
      <div class="card">
        <%= link_to list.name, list_path(list) %>
        </div>
    </div>
    <% end %>
  </div>
</div>
