<nav class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between">
    <div class="home-link"><a href='#'> <%= fa_icon "camera-retro"%></i></a></div>
    <div class="links px-3 py-1">
      <%= link_to "My lists", root_path %>
      <%= link_to "New list", new_list_path %>
  </div>
</nav>
<div class="banner text-center">
  <%# <%= image_tag 'cinema-banner.jpg',class: "bg-image" %>
  <div class="container-banner">
    <h1> Save any kind of movies</h1>
    <p> Classic </p>
  </div>
</div>
<div class="container mt-5 p-3">
  <div class="px-3 mx-1">
    <div class="container col d-flex justify-content-between">
      <h4> My lists </h4>
      <%= link_to "Create a new list", new_list_path, class: "btn btn-flat" %>
    </div>
  </div>
  <div class="row row-cols-3 mx-n5">
    <% @lists.each do |list| %>
    <div class="col px-5 my-3">
      <% if !list.photo.key.nil? %>
        <div class="card-category" style="background-image: url(<%= cl_image_path list.photo.key %>)">
          <h4> <%= link_to list.name, list_path(list) %> </h4>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
