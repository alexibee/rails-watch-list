<nav class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between">
    <div class="home-link"> ICON</div>
    <div class="links px-3 py-1">
      <%= link_to "My lists", lists_path %>
      <%= link_to "New list", new_list_path %>
  </div>
</nav>
<div class="banner text-center">

  <div class="container-banner">
    <h2> <%= @list.name %> </h2>
  </div>

</div>

<div class="container mt-5 p-3">
  <%= link_to "Add a Movie", new_list_bookmark_path(@list) %>
  <div class="row row-cols-3 mx-n5">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col px-5 my-3">
        <div class="card-film" style="background-image: url(<%=bookmark.movie.poster_url%>)">
          <h4 class="card-title"> <%= bookmark.movie.title %> </h4>
          <p> <%= bookmark.movie.overview %> </p>
          <p><%= bookmark.comment %></p>
          <%= link_to "Delete the Movie", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
